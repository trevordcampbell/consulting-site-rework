{
  "parser": "@typescript-eslint/parser", // Use the TypeScript parser
  "extends": ["eslint:recommended", "next", "next/core-web-vitals"],
  "parserOptions": {
    "project": "./tsconfig.json" // Use the project's TypeScript configuration file
  },
  "globals": {
    "React": false // Allow React to be undefined, since NextJS does not require it to be defined.
  },
  "rules": {
    "no-unused-vars": 1,  // Set to Warn
    "react/no-unescaped-entities": 1  // Set to Warn
  }
}
